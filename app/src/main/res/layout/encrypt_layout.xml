<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/picture"
            android:layout_row="0"
            android:layout_column="0"/>

        <Button
            android:text="Decode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/decode"
            android:layout_row="2"
            android:layout_column="0"/>

        <Button
            android:text="Encode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:id="@+id/encode"/>

        <Button
            android:text="Text Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:layout_row="4"
            android:layout_column="0"/>

        <Button
            android:text="Email Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:layout_row="5"
            android:layout_column="0"/>

        <TextView
            android:text="Encode Message"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_row="6"
            android:layout_column="0"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:inputType="textPersonName"
            android:hint="Type message here"
            android:ems="10"
            android:layout_row="7"
            android:layout_column="0"
            android:id="@+id/encodeEditText"/>

        <TextView
            android:text="Decode Message"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/decodeTextView"
            android:layout_row="8"
            android:layout_column="0"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:inputType="textPersonName"
            android:hint="Decoded Message Here"
            android:ems="10"
            android:layout_row="9"
            android:layout_column="0"
            android:id="@+id/decodeMessageEditText"/>

    </GridLayout>

</ScrollView>
</LinearLayout>